{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless",
      "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
      "cwd": "${fileDirname}",
      "args": [
        "offline",
        "start"
      ],
      "restart": true,
      "autoAttachChildProcesses": true
    }
  ]
}
